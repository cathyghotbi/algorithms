// write a function that, given three integers X, Y and D, returns the minimal number of jumps from position X to a position equal to or greater than Y

int solution(int X, int Y, int D)
{
  std::uint32_t distanceHereThere = Y - X;
  std::uint32_t nrOfJumpInterval = (distanceHereThere / D);
  std::uint32_t extraJumpIntervalNeeded = ((distanceHereThere % D) !=0) ? 1 : 0;
  nrOfJumpInterval += extraJumpIntervalNeeded;
  return nrOfJumpInterval;
}
